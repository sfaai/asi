@model IEnumerable<WebApplication1.CSCOSH>
@using WebApplication1.Utility;
@{
    ViewBag.Title = "Index";
}

<div style="width:96vw">
    <table class="table table-bordered table-hover table-responsive-lg table-sm">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.First().EFFDATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TERDATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PRSCODE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CSPR.PRSNAME)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.First().ENDDATE)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.First().FOLIONO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().REM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().STAMP)
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (Html.Action() == "Edit")
                    {
                        @Html.ActionLink(" ", "Edit", "CSCOSHes", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.CONO), person = item.PRSCODE }, new { @class = "fa fa-edit", title = "Edit" })
                        @:&nbsp;
                        @Html.ActionLink(" ", "Details", "CSCOSHes", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.CONO), person = item.PRSCODE }, new { @class = "fa fa-folder", title = "Details" })
                        @:&nbsp;
                        @Html.ActionLink(" ", "Delete", "CSCOSHes", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.CONO), person = item.PRSCODE }, new { @class = "fa fa-trash", title = "Delete" })
                    }
                    else if (Html.Action() == "Details")
                    {
                        @Html.ActionLink(" ", "Details", "CSCOSHes", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.CONO), person = item.PRSCODE }, new { @class = "fa fa-folder", title = "Details" })
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EFFDATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TERDATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRSCODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CSPR.PRSNAME)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ENDDATE)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FOLIONO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.REM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STAMP)
                </td>


            </tr>
        }

    </table>
</div>