            <td class="text-right">
                @Html.DisplayFor(modelItem => item.TAXAMT)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.NETAMT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STAMP)
            </td>

