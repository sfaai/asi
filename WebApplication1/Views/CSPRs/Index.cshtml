@using PagedList;
@using PagedList.Mvc;
@using WebApplication1.Utility;
@model IPagedList<WebApplication1.CSPR>

@{

    ViewBag.Title = "Entity";
}

<div class="border border-info bg-info" style="width:98vw">
    <h4 class="h4 text-center">@ViewBag.Title</h4>
    @Html.Action("Search")
</div>

<div class="row  form-inline" style="width:98vw">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
    new PagedListRenderOptions()
    {
        Display = PagedListDisplayMode.IfNeeded,
        DisplayPageCountAndCurrentLocation = true,
        DisplayItemSliceAndTotal = true,
        UlElementClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item", "page-link" },
        ContainerDivClasses = new[] { "page-item", "page-link" }
    })

    @Html.ActionLink(" Listing", "Listing", new { id = "All" }, new { @class = "btn btn-sm fa fa-print", title = "print listing" })

</div>

<table class="table table-bordered table-hover table-responsive-lg table-sm">
    <tr class="label-primary">
        <th>
            @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary h4" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PRSCODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PRSNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SEX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MOBILE1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MOBILE2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OCCUPATION)
        </th>
     

        <th>
            @Html.DisplayNameFor(model => model.First().HKCONST.CONSTDESC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PRSTITLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NATION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().RACE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CTRYINC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().REM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().STAMP)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.ActionLink(" ", "Edit", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.PRSCODE), page = ViewBag.page }, new { @class = "fa fa-edit", title = "Edit" })
                @Html.ActionLink(" ", "Details", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.PRSCODE), page = ViewBag.page }, new { @class = "fa fa-folder", title = "Details" })
                @Html.ActionLink(" ", "Delete", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.PRSCODE), page = ViewBag.page }, new { @class = "fa fa-trash", title = "Delete" })

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRSCODE)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.PRSNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SEX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MOBILE1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MOBILE2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OCCUPATION)
            </td>


            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.HKCONST.CONSTDESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HKTITLE.TITLE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HKNATION.NATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HKRACE.RACE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HKCTRY.CTRYDESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.REM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STAMP)
            </td>
        </tr>
    }

</table>
