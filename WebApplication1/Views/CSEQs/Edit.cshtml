@model WebApplication1.CSEQ
@using WebApplication1.Utility

@{
    Layout = "~/Views/Shared/_LayoutG.cshtml";
    ViewBag.Title = "Edit Equity Code ";
}
<div class="border border-info bg-info">
    <h4 class="h4 text-center">@ViewBag.Title @Model.EQCODE</h4>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EQCODE)

        <div class="form-group col-md-10 form-check-inline">
            @Html.LabelFor(model => model.EQDESC, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.EQDESC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EQDESC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-10 form-check-inline">
            @Html.LabelFor(model => model.EQCAT, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.EQCAT, null, htmlAttributes : new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.EQCAT, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group col-md-10 form-check-inline">
                @Html.LabelFor(model => model.STAMP, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.STAMP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.STAMP, "", new { @class = "text-danger" })
                </div>
            </div>*@

        @Html.HiddenFor(model => model.STAMP)

        @Html.HiddenFor(model => model.CSCOPUKs)
        @Html.HiddenFor(model => model.EMTRAs)
        @Html.HiddenFor(model => model.EMTRCDs)
        @Html.HiddenFor(model => model.SFMYNEWPUKs)
        @Html.HiddenFor(model => model.SFMYNEWSHD1)
        @Html.HiddenFor(model => model.SFMYNEWSHD2)
        @Html.HiddenFor(model => model.SFSGNEWDRD2)
        @Html.HiddenFor(model => model.SFSGNEWDRD3)
        @Html.HiddenFor(model => model.SFSGNEWPUKs)
        @Html.HiddenFor(model => model.SFSGNEWSHD1)
        @Html.HiddenFor(model => model.SFSGNEWSHD2)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary fa fa-save" Title="Save" />
                @Html.ActionLink(" Back", "Index", null, new { @class = "btn btn-info fa fa-arrow-left" })
            </div>
        </div>
    </div>
}


@section Scripts {



    @Scripts.Render("~/bundles/jqueryval")
}
