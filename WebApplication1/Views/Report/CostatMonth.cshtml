<script>
    $(document).ready(function () {
        $('#mainTable').click(function (event) {
            var target = $(event.target);
            $th = target.closest('th');
            $td = target.closest('td');

            //$td.html(parseInt($td.html()) + 1);
            var col = $th.index();
            var row = $th.closest('tr').index();

            var dcol = $td.index();
            var drow = $td.closest('tr').index();
            var newlink = '';
            var year = 0;
            {
                drow += 2;
                status = document.getElementById("mainTable").rows[drow].cells.item(0).innerHTML.split('<')[0];
                status = status.trim();
               
                year = @ViewBag.year;
                if (dcol == -1) {
                    month = col;
                } else {
                    month = dcol;
                }
                if (month > 12) {month = 0;}
                if (row == 1) {
                    if (col != 0) {
                      
                        newlink = '@Url.Action("CostatDay", "Report")' + '?Year=' + year + '&Month=' + month;
                    }
                } else {
                    if ((dcol > 0)) {

                        newlink = '@Url.Action("CompanyList", "CSCOMSTRs")' + '?Year=' + year + '&Month=' + month + '&status=' + status;
                    }
                }

                if (newlink == '') { } else {
                    window.location = newlink;
                }
            }
            $('#debug').prepend('<div class="debugLine">Cell at position (' + [col,row,dcol, drow].join(',') + newlink + '-' + status +  ') clicked!</div>');

        });
    });

</script>