<script>

    $(document).ready(function () {
        $('#mainTable').click(function (event) {
            var target = $(event.target);
            $th = target.closest('th');
            $td = target.closest('td');

            //$td.html(parseInt($td.html()) + 1);
            var col = $th.index();
            var row = $th.closest('tr').index();

            var dcol = $td.index();
            var drow = $td.closest('tr').index();
            var newlink = '';
            var year = 0;
            {
                drow += 2;

                status = document.getElementById("mainTable").rows[drow].cells.item(0).innerHTML.split("<")[0];
                status = status.trim();
                if (dcol == -1) {
                    year = parseInt(document.getElementById("mainTable").rows[1].cells.item(col).innerHTML);
                } else {
                    year = parseInt(document.getElementById("mainTable").rows[1].cells.item(dcol).innerHTML);
                }
                if (row == 1) {
                    if (col != 0) {
                        newlink = '@Url.Action("CostatMonth", "Report")' + '?Year=' + year;
                    }
                } else {
                    if ((dcol > 0)) {
                        newlink = '@Url.Action("CompanyList", "CSCOMSTRs")' + '?Year=' + year + '&status=' + status;
                    }
                }

                if (newlink == '') { } else {
                    window.location = newlink;
                }
            }
            $('#debug').prepend('<div class="debugLine">Cell at position (' + [col,row,dcol, drow].join(',') + newlink + '-' + status +  ') clicked!</div>');

        });
    });
</script>




