@using WebApplication1.Utility;
@model IEnumerable<WebApplication1.CSSTAT>

@{
    Layout = "~/Views/Shared/_LayoutG.cshtml";
    ViewBag.Title = "Company Status";
}

<div class="border border-info bg-info">
    <h4 class="h4 text-center">@ViewBag.Title</h4>
</div>


<table class="table table-bordered table-hover table-responsive-lg table-sm">
    <tr  class="label-primary">
	   <th>
         @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary h4" })
       </th>
        <th>
            @Html.DisplayNameFor(model => model.First().COSTAT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BLANKFILE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FILENOPFIX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FILENOFR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FILENOTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BLANKSEAL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SEALNOFR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SEALNOTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().STAMP)
        </th>
        <th>
            @Html.ActionLink(" ", "Listing", null, new { @class = "btn btn-primary h4 fa fa-print", title = "Listing" })
        </th>
    </tr>

@foreach (var item in Model) {
            <tr class="text-nowrap">
                <td>
                    @Html.ActionLink(" ", "Edit", new { id =  MyHtmlHelpers.ConvertIdToByteStr(item.COSTAT ) }, new {@class="fa fa-edit", title="Edit"})
                    @Html.ActionLink(" ", "Details", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.COSTAT ) }, new { @class = "fa fa-folder", title = "Details" })
                    @Html.ActionLink(" ", "Delete", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.COSTAT ) }, new { @class = "fa fa-trash", title = "Delete" })
                </td>
        <td>
            @Html.DisplayFor(modelItem => item.COSTAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BLANKFILE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FILENOPFIX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FILENOFR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FILENOTO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BLANKSEAL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SEALNOFR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SEALNOTO)
        </td>
        <td colspan="2">
            @Html.DisplayFor(modelItem => item.STAMP)
        </td>
    </tr>
}

</table>
