@model WebApplication1.TaxRecord

@using (Html.BeginForm("SearchPost", "SalesTax", FormMethod.Post, new { id = "SearchRecForm" }))
{
    @Html.AntiForgeryToken()

    <div class="container form-check-inline" style="width:96vw">

        @*<div class="form-group col-md-1">
            <div class="align-text-bottom">
                <br />
                <input type="submit" value="Search" class="btn btn-lg btn-primary fa fa-filter fa-search" />
            </div>
        </div>*@
        <div class="form-group col-md-2">
            @Html.Label("Sort by", null, htmlAttributes: new { @class = "control-label" })
            <div class="form-check-inline">
                <button class="btn btn-lg btn-primary fa fa-search" onclick="document.getElementById('SearchRecForm').submit()"></button>

                @Html.DropDownList("SORTBY", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.coname, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.coname, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group col-md-2">
            @Html.LabelFor(model => model.cono, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.cono, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <div class="form-group col-md-2">
            @Html.LabelFor(model => model.entdate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.entdate, new { htmlAttributes = new { @class = "form-control date datepicker", @Value = Model.entdate.ToString("yyyy-MM-dd") } })

            </div>
        </div>

        <div class="form-group col-md-2">
            @Html.LabelFor(model => model.DUEDATE, htmlAttributes: new { @class = "control-label" })
            <div>
   
                    @Html.EditorFor(model => model.DUEDATE, new { htmlAttributes = new { @class = "form-control date datepicker", @Value = ((DateTime)Model.DUEDATE).ToString("yyyy-MM-dd") } })
         
            </div>
        </div>


    </div>

    @Scripts.Render("~/bundles/jquery")
    <script>
        $("#SORTBY").change(function () {
            $("#SearchRecForm").submit();
        })

        
        $("#entdate").change(
    function () {
        if ($("#entdate").val() == "") {
            $("#entdate").val("0001-01-01");
        }
    })

        $("#DUEDATE").change(
function () {
    if ($("#DUEDATE").val() == "") {
        $("#DUEDATE").val("0001-01-01");
    }
})
    </script>
}