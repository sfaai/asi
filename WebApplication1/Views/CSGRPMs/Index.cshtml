@using WebApplication1.Utility;
@model IEnumerable<WebApplication1.CSGRPM>

@{
    Layout = "~/Views/Shared/_LayoutG.cshtml";
    ViewBag.Title = "Company Grouping";
}

<div class="border border-info bg-info">
    <h4 class="h4 text-center">@ViewBag.Title</h4>
</div>


<table class="table table-bordered table-hover table-responsive-lg table-sm">
    <tr class="label-primary">
        <th>
            @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary h4 " })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GRPCODE)
        </th>
        <th colspan="2">
            @Html.DisplayNameFor(model => model.GRPDESC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STAMP)
        </th>
        <th>
            @Html.ActionLink(" ", "Listing", null, new { @class = "btn btn-primary h4 fa fa-print", title = "Listing" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-nowrap">
            <td>
                @Html.ActionLink(" ", "Edit", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.GRPCODE) }, new { @class = "fa fa-edit", title = "Edit" })
                @Html.ActionLink(" ", "Details", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.GRPCODE) }, new { @class = "fa fa-folder", title = "Details" })
                @Html.ActionLink(" ", "Delete", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.GRPCODE) }, new { @class = "fa fa-trash", title = "Delete" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GRPCODE)
            </td>
            <td colspan="2">
                @Html.DisplayFor(modelItem => item.GRPDESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STAMP)
            </td>
            <td>
                @Html.ActionLink(" ", "Create","CSGRPDs", new { id = MyHtmlHelpers.ConvertIdToByteStr(item.GRPCODE) } , new { @class = "btn btn-primary h4 fa fa-plus", title = "Add Company to Current Group" })
            </td>
        </tr>
        foreach (var det in item.CSGRPDs)
        {
            <tr class="text-nowrap">
                <td colspan="2"></td>
      
     
                <td>
                    @Html.DisplayFor(modelItem => det.CSCOMSTR.CONAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => det.CSCOMSTR.COREGNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => det.STAMP)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", "CSGRPDs", new { id = MyHtmlHelpers.ConvertIdToByteStr(det.GRPCODE), conos = MyHtmlHelpers.ConvertIdToByteStr(det.CONO) }, new { @class = "fa fa-edit", title = "Edit" })
                    @Html.ActionLink(" ", "Details", "CSGRPDs", new { id = MyHtmlHelpers.ConvertIdToByteStr(det.GRPCODE), conos = MyHtmlHelpers.ConvertIdToByteStr(det.CONO) }, new { @class = "fa fa-folder", title = "Details" })
                    @Html.ActionLink(" ", "Delete", "CSGRPDs", new { id = MyHtmlHelpers.ConvertIdToByteStr(det.GRPCODE), conos = MyHtmlHelpers.ConvertIdToByteStr(det.CONO) }, new { @class = "fa fa-trash", title = "Delete" })
                </td>
            </tr>
        }
    }

</table>
